{
  "version": 2,
  "projects": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "apps/backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/backend/src/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/dist/$1"
    }
  ]
}
